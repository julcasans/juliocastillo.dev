<div class="related">
  <h1 >{{ site.settings.related_posts }}</h1>
  {% set listed_posts_urls = page.url | split: ' ' %}
  <ul class="related-posts">
    {% for tag in page.tags %}
      {% for mypost in collections.all[tag] limit:3 %}
        {% if listed_posts_urls contains mypost.url %}
        {% else %}
          <li>
            <h3>
              <a href="{{ site.github.url }}{{ mypost.url }}">
                {{ mypost.title }}
                <!--<img src="{{ site.url }}{{ site.baseurl }}/images/{{ mypost.image.teaser }}">-->
                <!--<small>{{ mypost.date | date: "%B %-d, %Y" }}</small>-->
              </a>
            </h3>
          </li>
          {% set listed_posts_urls = listed_posts_urls | push: mypost.url %}
        {% endif %}
      {% endfor %}
    {% endfor %}
  </ul>
</div>
